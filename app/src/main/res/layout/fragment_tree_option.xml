<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ph.projeto_final_ed.fragment.TreeOptionFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.design.widget.TabLayout
        android:id="@+id/tb_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_integrante_id"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp">

        <android.support.design.widget.TabItem
            android:id="@+id/item_a_fazer_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ArvBin" />

        <android.support.design.widget.TabItem
            android:id="@+id/item_fazendo_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ABP" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagina"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tb_layout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tb_layout" />

</RelativeLayout>
